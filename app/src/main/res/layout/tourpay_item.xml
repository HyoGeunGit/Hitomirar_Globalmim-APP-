        android:layout_marginLeft="200dp"
        android:background="#efa383"
       />

    <TextView
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:background="#efa383"
        android:layout_marginTop="475dp"
        android:layout_marginLeft="200dp" />

    <ImageView
        android:layout_width="80dp"
