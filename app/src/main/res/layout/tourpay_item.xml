        android:src="@drawable/minus" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="295dp"
        android:src="@drawable/minus" />



</RelativeLayout>
